{
    "manifest_version": 2,
    "name": "My First Extension",
    "version": "1.0",
    "description": "This is my first Chrome extension.",
    "permissions": [
        "storage",
        "cookies", // Toevoegen van de cookies-permissie als je cookies wilt lezen
        "https://*.roblox.com/" // Specifieke toestemming voor Roblox-domeinen
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon.png"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'"
}
